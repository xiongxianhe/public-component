/* component/jdzMsgCard/jdzMsgCard.wxss */

.card-item {
  width: 694rpx;
  height: 160rpx;
  background: #FFFFFF;
  border-radius: 20rpx 20rpx 20rpx 20rpx;
  padding: 0 30rpx;
  margin: 0 auto;
}
.card-img {
  width: 108rpx;
  height: 108rpx;
}
.card-img-img {
  width: 100%;
  height: 100%;
  border-radius: 24rpx 24rpx 24rpx 24rpx;
}
.user-info {
  margin-left: 20rpx;
}
.user-name {
  font-weight: bolder;
  font-size: 28rpx;
  color: #000000;
  margin-right: 10rpx;
}
.vip-tag {
  width: 108rpx;
  height: 48rpx;
  vertical-align: middle;
}
.user-name-info {
  margin-bottom: 10rpx;
}
.user-o-info text {
  margin-right: 10rpx;
  font-size: 22rpx;
  color: #5E636F;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.flex-between {
  justify-content: space-between;
}
.flex-around {
  justify-content: space-around;
}
.flex-start {
  justify-content: flex-start;
}
.chat-btm-tag {
  width: 25rpx;
  height: 23rpx;
  vertical-align: middle;
  margin-right: 12rpx;
}
.chat-btn {
  font-size: 24rpx!important;
  font-weight: normal;
  color: #FFFFFF;
  width: 126rpx!important;
  height: 58rpx!important;
  line-height: 58rpx!important;
  background: #0865FF;
  border-radius: 198rpx 198rpx 198rpx 198rpx;
  padding: 0!important;
  margin: 0!important;
}